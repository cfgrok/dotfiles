[diff]
	renames = true
	tool = meld

[difftool]
	prompt = false

# include user information from separate autogenerated file
[include]
	path = ~/.config/git/user

[init]
	defaultBranch = main

[merge]
	tool = meld

[mergetool]
	keepBackup = false
	prompt = false

[push]
	default = tracking

# list aliases last becaus they break syntax highlighting
[alias]
	oldest-ancestor = !zsh -c 'diff --old-line-format= --new-line-format= <(git rev-list --first-parent \"${1:-master}\") <(git rev-list --first-parent \"${2:-HEAD}\") | head -1' -
	branchdiff = !bash -c \"git diff `git oldest-ancestor`..\"
	branchlog = !bash -c \"git log `git oldest-ancestor`..\"
